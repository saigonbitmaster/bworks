{
  "name": "Task",
  "base": "BaseModel",
  "idInjection": true,
  "forceId": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "enum": [
        "todo",
        "doing",
        "finish"
      ]
    },
    "type": {
      "type": "string",
      "required": true,
      "enum": [
        "office",
        "technical",
        "other"
      ]
    },
    "priority": {
      "type": "string",
      "required": true,
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ]
    },
    "startDate": {
      "type": "date",
      "index": true,
      "default": "$now"
    },
    "dueDate": {
      "type": "date",
      "index": true
    },
    "finishDate": {
      "type": "date",
      "index": true
    },
    "estimateTime": {
      "type": "number",
      "default": 0
    },
    "attachedFiles": {
      "type": [
        "object"
      ]
    }
  },
  "validations": [],
  "relations": {
    "assignee": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "assigneeId"
    }
  },
  "acls": [],
  "methods": {}
}
